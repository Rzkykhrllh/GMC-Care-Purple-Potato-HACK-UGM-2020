<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="8dp"
    android:background="@color/colorAccent"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/tvNomorAntrian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Nomor Antrian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_medium"
        />

    <TextView
        android:id="@+id/tvNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="20"
        app:layout_constraintTop_toBottomOf="@id/tvNomorAntrian"
        app:layout_constraintStart_toStartOf="@id/tvNomorAntrian"
        app:layout_constraintEnd_toEndOf="@id/tvNomorAntrian"
        android:fontFamily="@font/montserrat_bold"
        />

    <ImageView
        android:id="@+id/Garis"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:src="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNomorAntrian"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="2dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Garis"
        tools:text="Muhammad Rizky Khairullah"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_semi_bold"/>

    <TextView
        android:id="@+id/tvNik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Garis"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        tools:text="19xxxxxxxx"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_medium"/>



</androidx.constraintlayout.widget.ConstraintLayout>